<resources>

    <style name="ShareBaseTheme" parent="@android:style/Theme.Holo.Light"></style>

    <style name="ShareTheme" parent="ShareBaseTheme">
        <item name="android:buttonStyle">@style/ShareButtonStyle</item>
        <item name="layoutbg">#FF00CC00</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimationInHost</item>
    </style>

    <style name="ActivityAnimationInHost" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="ShareButtonStyle">
        <item name="android:background">@android:color/black</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <attr name="layoutbg" format="color|reference" />

</resources>