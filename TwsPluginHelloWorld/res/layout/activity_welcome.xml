<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WelcomeActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/test_s_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="测试点击事件"/>

    <Button
        android:id="@+id/test_switch_btn"
        android:layout_width="fill_parent"
        android:layout_above="@+id/test_s_btn"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="测试Activity跳转"/>

    <Button
        android:id="@+id/test_transparent_btn"
        android:layout_width="fill_parent"
        android:layout_below="@+id/test_s_btn"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:text="测试全屏透明Activity跳转"/>

</RelativeLayout>
