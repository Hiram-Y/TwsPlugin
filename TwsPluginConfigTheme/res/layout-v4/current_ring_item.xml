<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="@dimen/tws_listview_item_height"
	android:paddingLeft="@dimen/tws_listview_item_padding_side_left"
	android:paddingRight="@dimen/tws_listview_item_padding_side_right">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="wrap_content"
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		>
		<TextView android:id="@id/currentRingTitleTint" 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:textAppearance="?android:attr/textAppearanceMedium"
    		android:textColor="@color/tws_text_blue_checked"
    		android:gravity="center_vertical"
    		android:ellipsize="marquee"/>
       	 <TextView android:id="@id/currentRingTitleTxt"
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="@dimen/tws_listview_subtitle_padding_top"
    		android:textAppearance="@style/TextAppearance.tws.Second.twstextMicroLightSummary"
            android:textColor="?android:attr/textColorSecondaryInverse"
    		android:gravity="center_vertical"
    		android:ellipsize="marquee"/>
	 </LinearLayout>
 </RelativeLayout>

