<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_view_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="20dp"
    android:background="#59000000"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/float_view_app_icon"
        android:layout_width="@dimen/tws_listview_icon_size"
        android:layout_height="@dimen/tws_listview_icon_size" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/child_info_marginRight"
        android:orientation="vertical" >

        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/float_view_app_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/tws_dark_title"
                android:textSize="@dimen/tws_Larger_TextSize" />

            <TextView
                android:id="@+id/float_view_app_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textColor="@color/tws_dark_body_sub"
                android:textSize="@dimen/tws_Small_TextSize" />
        </LinearLayout>

        <TextView
            android:id="@+id/float_view_app_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/default_ripple_dark"
            android:textSize="@dimen/tws_Medium_TextSize" />
    </LinearLayout>

</LinearLayout>