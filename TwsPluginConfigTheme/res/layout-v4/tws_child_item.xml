<?xml version="1.0" encoding="utf-8"?>
<!-- tws-start add expandablelistview custom style::2014-07-30-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/parent_total_height" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:minHeight="@dimen/child_total_height"
	    android:orientation="horizontal"
	    android:gravity="center_vertical" >
	    <ImageView
	        android:id="@+id/child_indicate" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/tws_expand_child_point"
	        android:layout_marginLeft="@dimen/child_indicate_marginLeft"
	        android:contentDescription="@null" />
	    <TextView
	        android:id="@+id/child_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/tws_light_title"
	        android:textSize="@dimen/tws_Medium_TextSize"
	        android:layout_marginLeft="@dimen/child_title_marginLeft"/>
	</LinearLayout>
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >
        <TextView
            android:id="@+id/child_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/child_info_marginRight"
            android:textSize="@dimen/tws_Small_TextSize"
            android:textColor="@color/tws_light_body_sub"
            />
    </LinearLayout>
</RelativeLayout>
<!-- tws-end add expandablelistview custom style::2014-07-30-->