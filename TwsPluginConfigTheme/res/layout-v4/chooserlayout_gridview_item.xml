<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dip"
    android:layout_height="98dip"
    android:gravity="center_horizontal" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/chooserlayout_image"
            android:layout_width="64dip"
            android:layout_height="64dip"
            />

        <TextView
            android:id="@+id/chooserlayout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/tws_chooser_layout_textcolor"
            android:textSize="12dip" />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/chooserlayout_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/resolver_setting" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/tws_chooser_layout_textcolor"
            android:textSize="12dip"
            android:text="@string/resolver_setting_text"
             />
    </LinearLayout>
</FrameLayout>