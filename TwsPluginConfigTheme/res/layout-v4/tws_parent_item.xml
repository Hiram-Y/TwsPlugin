<?xml version="1.0" encoding="utf-8"?>
<!-- tws-start add expandablelistview custom style::2014-07-30-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/parent_total_height" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/parent_marginLeft"
        android:layout_centerVertical="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/parent_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tws_light_title"
            android:textSize="@dimen/tws_Medium_TextSize" />

        <ImageView
            android:id="@+id/parent_divider"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/parent_divider_height"
            android:layout_marginLeft="@dimen/parent_divider_marginLeft"
            android:layout_gravity="center_vertical"
            android:src="@color/tws_dark_selected"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/parent_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/parent_subtitle_marginLeft"
            android:layout_gravity="center_vertical"
            android:textColor="@color/tws_text_light_summary"
            android:textSize="@dimen/tws_Large_TextSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/parent_indicate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/parent_indicate_marginRight"
            android:contentDescription="@null" />
    </LinearLayout>

</RelativeLayout>
<!-- tws-end add expandablelistview custom style::2014-07-30-->